<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoundAccountActivity">

    <!--계정 찾기 전체 레이아웃-->
    <LinearLayout
        android:id="@+id/LL_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--계정 찾기 텍스트-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#46B1E1"
            android:gravity="center_vertical"
            android:text="계정 찾기"
            android:paddingLeft="30dp"
            android:textColor="#F5F5F5"
            android:textSize="24dp"
            tools:ignore="MissingConstraints" />


        <!--아이디 찾기 버튼 (길이355)-->
        <Button
            android:id="@+id/btn_findid"
            android:layout_width="355dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/buttno2_all_round"
            android:text="아이디 찾기"
            android:textColor="#F5F5F5"
            android:textSize="20dp" />

        <!--비밀번호 찾기 버튼 (길이355)-->
        <Button
            android:id="@+id/btn_findpw"
            android:layout_width="355dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttno2_all_round"
            android:text="비밀번호 찾기"
            android:textColor="#F5F5F5"
            android:textSize="20dp" />

        <!--뒤로가기(하단) 버튼3(레이아웃)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_goback3"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#46B1E1"
                android:gravity="center_vertical"
                android:text="뒤로가기"
                android:paddingLeft="50dp"
                android:textColor="#E2F5F5F5"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <!--전체 레이아웃 종료-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>